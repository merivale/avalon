{
  "lock": false,
  "tasks": {
    "check": "deno fmt --check . && deno lint . && deno check",
    "start": "deno run --watch --allow-net --allow-env --allow-read --unstable-kv main.ts",
    "test": "npx playwright install chromium && deno test --allow-net --allow-env --allow-read --allow-write --allow-run --allow-sys tests/"
  },
  "imports": {
    "@/": "./",
    "@std/assert": "jsr:@std/assert@1.0.16",
    "@std/testing": "jsr:@std/testing@1.0.16",
    "playwright": "npm:playwright@1.48.2",
    "preact": "npm:preact@^10.27.2",
    "preact-render-to-string": "npm:preact-render-to-string@^6.6.3"
  },
  "compilerOptions": {
    "lib": [
      "dom",
      "esnext",
      "deno.ns",
      "deno.unstable"
    ],
    "jsx": "precompile",
    "jsxImportSource": "preact"
  }
}
